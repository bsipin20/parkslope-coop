[
  {
    "name": "db-migrate",
    "image": "${image}",
    "command": ["bundle", "exec", "rake", "db:migrate"],
    "memory": 300,
    "environment": [
      {
        "name": "RAILS_ENV",
        "value": "production"
      },
      {
        "name": "DATABASE_URL",
        "value": "${database_url}"
      },
      {
        "name": "SECRET_KEY_BASE",
        "value": "${secret_key_base}"
      },
      {
        "name": "RAILS_LOG_TO_STDOUT",
        "value": "true"
      }
    ]
  }
]
